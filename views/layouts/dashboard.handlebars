{{!-- JESSIE --}}
{{#if blogposts.length}}
  <div class="col-md-6 project-list">
    <h3>Posts:</h3>

    {{#each blogposts as |blogpost|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/blogpost/{{blogpost.id}}">{{blogpost.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button onclick="handleDelete(event)" class="btn btn-sm btn-danger" data-id="{{blogpost.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/post.js"></script>
{{!-- JESSIE ends --}}

